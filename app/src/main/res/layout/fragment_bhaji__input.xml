<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bazar_input.Bhaji_Input">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="#3333"
        android:orientation="vertical">

        <!-- This seling info -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bhaji Seling Form"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_marginBottom="24dp"
            />

        <EditText
            android:id="@+id/ed_SelingOwnerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Owner Name"
            android:inputType="textPersonName"
            android:layout_marginBottom="10dp"
            />

        <Spinner
            android:id="@+id/sp_SelingProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            android:text="kg or judi" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/rgProductWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

            <RadioButton
                android:id="@+id/radioButtonKiloGrame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="kg" />

            <RadioButton
                android:id="@+id/radioButtonJodi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="jodi" />
            </RadioGroup>
        </LinearLayout>

        <EditText
            android:id="@+id/ed_SelingKG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginBottom="10dp"
            android:inputType="numberDecimal" />
        <EditText
            android:id="@+id/ed_SelingJodi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginBottom="10dp"
            android:inputType="numberDecimal" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Group"
            android:id="@+id/cbSelingGroup"
            />
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gaow"
            android:id="@+id/cbSelingGaow"
            />
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All"
            android:id="@+id/cbSelingAll"
            />

        <TextView
            android:id="@+id/tvSelingShowSetPrices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:text="Set prices " />

        <EditText
            android:id="@+id/ed_SelingPrices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Prices"
            android:inputType="numberDecimal" />

        <ImageButton
            android:id="@+id/imageBtnSelingProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_photo_camera_black_24dp" />

        <Button
            android:id="@+id/btn_Seling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sales " />


    </LinearLayout>
</ScrollView>